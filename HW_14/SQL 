2. 
CREATE TABLE category (category_id INTEGER PRIMARY KEY, category_title TEXT);
INSERT INTO category (category_id, category_title) 
VALUES ('1', 'Beauty'), ('2', 'Science'), ('3', 'Travel')

3. 
CREATE TABLE posts(
id INTEGER PRIMARY KEY AUTOINCREMENT, title TEXT, date_created TEXT, content TEXT, post_author_id TEXT, post_category_id TEXT,
CONSTRAINT fk_post_author_id
FOREIGN KEY (post_author_id)
REFERENCES users (id)
ON DELETE CASCADE,
CONSTRAINT fk_post_category_id
FOREIGN KEY (post_category_id) REFERENCES category(category_id) ON DELETE SET NULL
);

